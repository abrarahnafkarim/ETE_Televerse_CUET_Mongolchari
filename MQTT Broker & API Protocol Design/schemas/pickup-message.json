{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AERAS Pickup Message Schema",
  "description": "Schema for passenger pickup confirmation",
  "type": "object",
  "allOf": [
    { "$ref": "message-base.json" }
  ],
  "properties": {
    "type": {
      "const": "pickup"
    },
    "payload": {
      "type": "object",
      "required": [
        "tripId",
        "requestId",
        "pickupLocation",
        "pickupTime"
      ],
      "properties": {
        "tripId": {
          "type": "string",
          "pattern": "^TRP-[0-9]{8}-[0-9]{3}$"
        },
        "requestId": {
          "type": "string",
          "pattern": "^REQ-[0-9]{8}-[0-9]{3}$"
        },
        "pickupLocation": {
          "type": "object",
          "required": ["latitude", "longitude", "timestamp"],
          "properties": {
            "latitude": {
              "type": "number",
              "minimum": -90,
              "maximum": 90
            },
            "longitude": {
              "type": "number",
              "minimum": -180,
              "maximum": 180
            },
            "timestamp": {
              "type": "string",
              "format": "date-time"
            }
          }
        },
        "pickupTime": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}

